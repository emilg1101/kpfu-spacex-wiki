<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_core"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        tools:text="B1056.2"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_core"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#50ffffff"
        android:id="@+id/view"/>

    <TextView
        android:id="@+id/label_landing_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Landing vehicle"/>

    <TextView
        android:id="@+id/text_landing_vehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/label_landing_vehicle"
        app:layout_constraintTop_toTopOf="@+id/label_landing_vehicle"
        app:layout_constraintStart_toEndOf="@+id/label_landing_vehicle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="LZ-1"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/label_landing_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label_landing_vehicle"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Landing type"/>

    <TextView
        android:id="@+id/text_landing_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/label_landing_type"
        app:layout_constraintTop_toTopOf="@+id/label_landing_type"
        app:layout_constraintStart_toEndOf="@+id/label_landing_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="RTLS"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/label_reused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label_landing_type"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Reused"/>

    <TextView
        android:id="@+id/text_reused"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/label_reused"
        app:layout_constraintTop_toTopOf="@+id/label_reused"
        app:layout_constraintStart_toEndOf="@+id/label_reused"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="false"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/label_landing_successful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/label_reused"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Landing successful"/>

    <TextView
        android:id="@+id/text_landing_successful"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/label_landing_successful"
        app:layout_constraintTop_toTopOf="@+id/label_landing_successful"
        app:layout_constraintStart_toEndOf="@+id/label_landing_successful"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="false"
        android:textAlignment="textEnd"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/btn_more"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="More"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_landing_successful"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>