<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColor</item>

        <item name="android:textColor">@color/textColor</item>

        <item name="toolbarStyle">@style/Toolbar</item>

        <item name="android:windowBackground">@color/eerie_black</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarText</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
