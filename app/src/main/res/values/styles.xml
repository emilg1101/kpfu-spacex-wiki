<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColor</item>

        <item name="android:textColor">@color/textColor</item>

        <item name="toolbarStyle">@style/Toolbar</item>

        <item name="android:windowBackground">@color/eerie_black</item>
    </style>

    <style name="WhiteAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarText</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textColor</item>
    </style>
    
    <!-- Text-->
    <style name="Text" parent="TextAppearance.AppCompat">
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="Text.Small.Secondary">
        <item name="android:textColor">@color/white_45</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="Text.Medium.Secondary">
        <item name="android:textColor">@color/white_45</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <!-- Button -->

    <style name="Button">
    </style>

    <style name="WikiButton" parent="Button">
        <item name="android:background">@drawable/button_wiki_primary</item>
        <item name="android:textAppearance">@style/Text.Title</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
